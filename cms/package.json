{
  "name": "cms",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "cross-env PAYLOAD_CONFIG_PATH=src/payload.config.ts nodemon",
    "build:payload": "cross-env PAYLOAD_CONFIG_PATH=src/payload.config.ts payload build",
    "build:server": "tsc",
    "build": "yarn copyfiles && yarn build:payload && yarn build:server",
    "serve": "cross-env PAYLOAD_CONFIG_PATH=dist/payload.config.js NODE_ENV=development node dist/server.js",
    "lint": "npx eslint --fix",
    "prettier": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,scss,html}\"",
    "copyfiles": "copyfiles -u 1 \"src/**/*.{html,css,scss,ttf,woff,woff2,eot,svg,jpg,png,ejs,pug,json,mjs}\" dist/",
    "generate:types": "cross-env PAYLOAD_CONFIG_PATH=src/payload.config.ts payload generate:types",
    "generate:graphQLSchema": "cross-env PAYLOAD_CONFIG_PATH=src/payload.config.ts payload generate:graphQLSchema",
    "payload": "cross-env PAYLOAD_CONFIG_PATH=src/payload.config.ts payload",
    "vercel-build": "npm run build",
    "migrate:create": "npm run payload migrate:create",
    "migrate": "npm run payload migrate",
    "migrate:down": "npm run payload migrate:down",
    "migrate:status": "npm run payload migrate:status",
    "backup": "ts-node src/backup/backup.ts",
    "restore": "ts-node src/backup/restore.ts"
  },
  "dependencies": {
    "@innovixx/payload-color-picker-field": "^1.1.1",
    "@payloadcms/bundler-webpack": "^1.0.0",
    "@payloadcms/db-postgres": "^0.x",
    "@payloadcms/plugin-cloud-storage": "^1.1.2",
    "@payloadcms/plugin-sentry": "^0.0.6",
    "@payloadcms/richtext-slate": "^1.0.0",
    "copy-webpack-plugin": "^12.0.2",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^8.2.0",
    "express": "^4.19.2",
    "payload": "^2.30.4",
    "winston": "^3.16.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.0.2",
    "@eslint/js": "^9.0.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.13",
    "@types/node": "^18.11.9",
    "@types/pg": "^8.11.10",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.57.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.34.1",
    "globals": "^15.0.0",
    "nodemon": "^2.0.6",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
}
